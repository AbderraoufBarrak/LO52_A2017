<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.vladmir.lo52_tp5.LO52MainActivity"
    >

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="515dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-12dp">

        <TextView
            android:id="@+id/id_affichetextview"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Affichage du texte"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="visible"
            tools:text="Affichage du texte" />

        <EditText
            android:id="@+id/id_valeuredittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Saisir une valeur" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_readbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read" />

            <Button
                android:id="@+id/id_writebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Write" />

            <Button
                android:id="@+id/id_startbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start" />

            <Button
                android:id="@+id/id_stopbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop" />

            <Button
                android:id="@+id/id_resetbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
