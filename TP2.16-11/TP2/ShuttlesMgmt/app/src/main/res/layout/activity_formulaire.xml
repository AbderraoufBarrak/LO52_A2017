<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.hervenrv.shuttlesmgmt.FormulaireAct">

    <TextView
        android:id="@+id/ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ref"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1" />

    <Spinner
        android:id="@+id/liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ref"
        app:layout_constraintLeft_toRightOf="@+id/ref"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/label_quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantité"
        app:layout_constraintTop_toBottomOf="@+id/ref"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/ref" />

    <EditText
        android:id="@+id/quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/label_quantite"
        app:layout_constraintLeft_toRightOf="@+id/label_quantite"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/label_acheteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acheteur"
        app:layout_constraintTop_toBottomOf="@+id/label_quantite"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/label_quantite" />

    <EditText
        android:id="@+id/acheteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/label_acheteur"
        app:layout_constraintLeft_toRightOf="@+id/label_acheteur"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/label_paye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payé ?"
        app:layout_constraintTop_toBottomOf="@+id/label_acheteur"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/label_acheteur" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textOff="Non"
        android:textOn="Oui"
        app:layout_constraintTop_toTopOf="@+id/label_paye"
        app:layout_constraintLeft_toRightOf="@+id/label_paye"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_paye"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@+id/label_paye"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
