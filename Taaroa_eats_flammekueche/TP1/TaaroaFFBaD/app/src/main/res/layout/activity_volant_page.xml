<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@drawable/backhome"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tvVolantMarqueRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#000"
                    android:shadowRadius="5"
                    android:shadowDy="6"
                    android:shadowDx="7"
                    android:text="TextView"
                    android:textColor="#fff"
                    android:textSize="35sp"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:layout_centerHorizontal="true"
                    android:shadowColor="#000"
                    android:shadowRadius="5"
                    android:shadowDy="6"
                    android:shadowDx="7"
                    android:layout_marginTop="145dp"
                    android:background="#fff"/>

                <LinearLayout
                    android:id="@+id/lyInterests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="160dp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="3"
                        android:stepSize="0.1" />


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/tvValidite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/etStandActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Lorem ipsum dolor sit amet constroctor ergo sum cogito de emersqui. Lorem ipsum dolor sit amet constroctor ergo sum cogito de emersqui. Lorem ipsum dolor sit amet constroctor ergo sum cogito de emersqui. Lorem ipsum dolor sit amet constroctor ergo sum cogito de emersqui. " />

                <Button
                    android:id="@+id/btnCommander"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Commander" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

