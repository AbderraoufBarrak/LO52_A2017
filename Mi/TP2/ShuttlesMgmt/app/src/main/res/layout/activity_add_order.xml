<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Version2.addActivity.AddOrder">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Customer Name"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Product Name"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        tools:layout_editor_absoluteX="4dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Spinner
        android:id="@+id/id_spCustomer"
        android:layout_width="255dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <Spinner
        android:id="@+id/id_spProduct"
        android:layout_width="255dp"
        android:layout_height="33dp"
        app:layout_constraintRight_toRightOf="@+id/id_spCustomer"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/id_spCustomer"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Switch
        android:id="@+id/id_isPaid"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:checked="false"
        android:text="Payer"
        android:textOff="Non Payer"
        android:textOn="Payer"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/id_ETQuantity"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="143dp" />

    <EditText
        android:id="@+id/id_ETQuantity"
        android:layout_width="255dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/id_spRef" />

    <Button
        android:id="@+id/id_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginLeft="69dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="412dp"
        android:layout_marginStart="69dp" />

    <Button
        android:id="@+id/id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintLeft_toRightOf="@+id/id_add"
        android:layout_marginLeft="54dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="412dp"
        android:layout_marginStart="54dp" />

    <EditText
        android:id="@+id/id_ETPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Special Price"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/id_ETQuantity"
        android:layout_marginStart="42dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="Special Price"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Reference"
        tools:layout_editor_absoluteX="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Spinner
        android:id="@+id/id_spRef"
        android:layout_width="230dp"
        android:layout_height="29dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="31dp"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/id_spProduct" />

</android.support.constraint.ConstraintLayout>
