<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Version2.DBActivity.CustomerActivity">

    <ListView
        android:layout_width="413dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:id="@+id/id_listCustomer"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/id_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:text="Nom"
        app:layout_constraintBottom_toTopOf="@+id/id_listCustomer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_add"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:text="Adresse"
        app:layout_constraintBottom_toTopOf="@+id/id_listCustomer"
        app:layout_constraintLeft_toRightOf="@+id/id_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_phone"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:text="Telephone"
        app:layout_constraintBottom_toTopOf="@+id/id_listCustomer"
        app:layout_constraintLeft_toRightOf="@+id/id_add"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
