<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shuttlesmgmt.activity.Version2.modifyActivity.modifyOrder">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintLeft_toLeftOf="@+id/textView15"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Reference"
        app:layout_constraintLeft_toLeftOf="@+id/textView16"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        app:layout_constraintLeft_toLeftOf="@+id/textView17"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Switch
        android:id="@+id/id_isPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="PAY"
        android:textOff="Not Paid"
        android:textOn="Paid"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/id_ETprice"
        android:layout_marginLeft="132dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/id_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="374dp"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/id_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="374dp"
        android:text="Back"
        app:layout_constraintLeft_toRightOf="@+id/id_modify"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/id_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id_back"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <EditText
        android:id="@+id/id_ETprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="@+id/id_ETquantity"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/id_ETquantity"
        android:layout_marginRight="0dp" />

    <EditText
        android:id="@+id/id_ETquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="@+id/id_TVproductRef"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/id_TVproductRef"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/id_TVcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/textView15"
        android:layout_marginLeft="187dp"
        android:layout_marginStart="187dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/id_TVproductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        app:layout_constraintRight_toRightOf="@+id/id_TVcustomer"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/id_TVcustomer"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/id_TVproductRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Reference"
        app:layout_constraintRight_toRightOf="@+id/id_TVproductName"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/id_TVproductName"
        android:layout_marginRight="0dp" />
</android.support.constraint.ConstraintLayout>
