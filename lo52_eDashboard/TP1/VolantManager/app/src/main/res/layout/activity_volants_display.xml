<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="fr.utbm.volantmanager.VolantsDisplay">

    <Spinner
        android:id="@+id/sort_sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:entries="@array/sort_types"
        android:popupBackground="@color/colorBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/sort_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_caption"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBaseText"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <Space
        android:layout_width="378dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@+id/sort_tv"
        tools:layout_editor_absoluteX="1dp"
        android:id="@+id/space2" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_price"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="50dp" />

    <TextView
        android:id="@+id/stock_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_stock"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="120dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="120dp" />

    <ListView
        android:id="@+id/volants_lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
