<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/achat_lv_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:textColor="@color/colorBaseText"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toRightOf="@+id/space4"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/achat_lv_family_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textAlignment="textStart"
        android:textColor="@color/colorBaseText"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/space4"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/achat_lv_society_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textColor="@color/colorBaseText"
        android:textSize="18sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_family_tv"
        app:layout_constraintLeft_toRightOf="@+id/space4"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/achat_lv_refmarque_tv"
        android:layout_width="173dp"
        android:layout_height="18dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:gravity="top"
        android:textAlignment="center"
        android:textColor="@color/colorBaseText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/achat_lv_society_tv"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/space4"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_quantite_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/achat_lv_price_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBaseText"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/achat_lv_refmarque_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_society_tv" />

    <TextView
        android:id="@+id/achat_lv_quantite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:textAlignment="center"
        android:textColor="@color/colorBaseText"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/space4"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/achat_lv_id_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBaseText"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/achat_lv_date_tv"
        android:layout_marginRight="16dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBaseText"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_id_tv"
        android:id="@+id/view"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <Space
        android:id="@+id/space4"
        android:layout_width="4dp"
        android:layout_height="65dp"
        android:layout_marginEnd="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Space
        android:layout_width="368dp"
        android:layout_height="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_price_tv"
        android:id="@+id/space5" />

    <TextView
        android:id="@+id/achat_lv_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorBaseText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/achat_lv_taille_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorBaseText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/achat_lv_society_tv"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/space4"
        app:layout_constraintTop_toBottomOf="@+id/achat_lv_refmarque_tv"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>