<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/volant_iv"
        android:layout_width="73dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_volants_manager"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/volant_marque_tv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/marque_volants"
        android:textAlignment="textStart"
        android:textColor="@color/colorBaseText"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/volant_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.533" />

    <TextView
        android:id="@+id/volant_ref_tv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/ref_volants"
        android:textAlignment="textStart"
        android:textColor="@color/colorBaseText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/volant_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volant_marque_tv" />
</android.support.constraint.ConstraintLayout>