<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_name"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/textView_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textView_grade"
        android:layout_alignBottom="@+id/textView_grade"
        android:layout_alignStart="@+id/textView_stock" />
    <TextView
        android:id="@+id/textView_statut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="38dp"
        android:layout_alignBaseline="@+id/textView_stock"
        android:layout_alignBottom="@+id/textView_stock"
        android:layout_toEndOf="@+id/textView_stock" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_name"
        android:layout_alignStart="@+id/textView_name"
        android:text="BuyerName"
        android:textSize="11sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_stock"
        android:layout_alignStart="@+id/textView_stock"
        android:text="Quantity"
        android:textSize="11sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_grade"
        android:layout_alignStart="@+id/textView_grade"
        android:text="TubeRef"
        android:textSize="11sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_prix"
        android:layout_alignStart="@+id/textView_prix"
        android:text="TotalPrice"
        android:textSize="11sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_statut"
        android:layout_alignStart="@+id/textView_statut"
        android:text="Paiement"
        android:textSize="11sp"
        android:textStyle="bold|italic" />
</RelativeLayout>