<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiera.shuttlesmgmt.NouvelAchatActivity">

    <EditText
        android:id="@+id/editNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Nom Acheteur"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/cbPaye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Payé"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editQtt" />

    <Spinner
        android:id="@+id/spinnerTube"
        android:layout_width="209dp"
        android:layout_height="23dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editNom" />

    <EditText
        android:id="@+id/editQtt"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Quantitée"
        android:inputType="number"
        android:text="1"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTube" />

    <Button
        android:id="@+id/bValiderAchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicConfirm"
        android:text="Valider"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbPaye"
        app:layout_constraintLeft_toRightOf="@+id/cbPaye"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/textPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="0.0€"
        app:layout_constraintBaseline_toBaselineOf="@+id/editQtt"
        app:layout_constraintLeft_toRightOf="@+id/editQtt" />

    <TextView
        android:id="@+id/stockActuelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Stock : "
        app:layout_constraintLeft_toRightOf="@+id/spinnerTube"
        app:layout_constraintTop_toTopOf="@+id/spinnerTube" />
</android.support.constraint.ConstraintLayout>
